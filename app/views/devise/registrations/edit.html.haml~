%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  .field
    = f.label :Prenom
    %br/
    = f.text_field :firstname, autofocus: true
  .field
    = f.label :"Nom de famille"
    %br/
    = f.text_field :name, autofocus: true
  .field
    = f.label :Promotion
    %br/
    = f.text_field :promo, autofocus: true
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true
  .field
    = f.label :"Numéro de téléphone"
    %br/
    = f.telephone_field :phonenumber, autofocus: true
  .field
    = f.label :avatar
    %br/
    = f.file_field :avatar, autofocus: true
    = f.hidden_field :avatar_cache
    - unless current_user.avatar_url.nil?
      = image_tag @user.avatar_url :small
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.label :"Mot de passe"
    %i (ne pas remplir si vous ne voulez pas changer de mot de passe)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :"confirmation du mot de passe"
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :"Mot de passe actuel"
    %i (Remplir ce champ si vous voulez effectuer une modification)
    %br/
    = f.password_field :current_password, autocomplete: "off"
  .actions
    = f.submit "Mettre à jour"
%h3 Supprimer son compte
%p
  #{button_to "Supprimer son compte", registration_path(resource_name), data: { confirm: "Etes vous sûr?" }, method: :delete}
= link_to "Back", :back
